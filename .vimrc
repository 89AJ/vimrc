"Plugin manager"
execute pathogen#infect()
syntax on
filetype plugin indent on

"set relative numbers"
set number     
set rnu 

"Read changed when file is changed from the outside"
set autoread

set ruler

"Searching"
set ignorecase
set smartcase
set hlsearch
set incsearch

"Brackets"
set showmatch

"Errors"
set noerrorbells
set novisualbell

"Tab
set expandtab
set shiftwidth=4
set tabstop=4
set ai
set si

